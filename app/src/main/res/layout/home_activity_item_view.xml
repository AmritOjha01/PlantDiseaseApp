<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:text_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">


            <com.example.navigation.customcomponents.CircularImageView
                android:id="@+id/home_activity_item_view_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:alpha="0.9"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/tomato" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.example.navigation.customcomponents.LatoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:paddingRight="4dp"
                        android:text="Humidity"
                        android:textSize="14sp"
                        text_view:textStyle1="Bold" />

                    <com.example.navigation.customcomponents.LatoTextView
                        android:id="@+id/home_activity_item_view_humidity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Item View"
                        android:textSize="14sp"
                        text_view:textStyle1="Bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.example.navigation.customcomponents.LatoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:paddingRight="4dp"
                        android:text="Temperature"
                        android:textSize="14sp"
                        text_view:textStyle1="Bold" />

                    <com.example.navigation.customcomponents.LatoTextView
                        android:id="@+id/home_activity_item_view_temp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Item View"
                        android:textSize="14sp"
                        text_view:textStyle1="Bold" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginTop="8dp"
            android:alpha="0.3"
            android:background="#474747" />-->

    </android.support.v7.widget.CardView>

</LinearLayout>
