<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:text_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/home_activity_item_view_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.9"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/tomato" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.navigation.customcomponents.LatoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Humidity"
                    android:paddingRight="4dp"
                    android:textSize="16sp"
                    text_view:textStyle1="Regular" />

            <com.example.navigation.customcomponents.LatoTextView
                android:id="@+id/home_activity_item_view_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Item View"
                android:textSize="16sp"
                text_view:textStyle1="Regular" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.navigation.customcomponents.LatoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:paddingRight="4dp"
                    android:text="Temperature"
                    android:textSize="16sp"
                    text_view:textStyle1="Regular" />

            <com.example.navigation.customcomponents.LatoTextView
                android:id="@+id/home_activity_item_view_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Item View"
                android:textSize="16sp"
                text_view:textStyle1="Regular" />

        </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginTop="8dp"
        android:alpha="0.3"
        android:background="#474747"></View>

</LinearLayout>
